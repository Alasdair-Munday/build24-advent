<div class="entry-header-block entry-header-{{ post.colour }}">
	<h1>Day {{ post.day }}</h1>
</div>

<div class="entry-content">
	{{ post.body | safe }}
</div>

<div class="collect-sticker">
	<h2>Now collect your virtual sticker for today!
	<p>Touch below to collect your sticker:</p>
	<div class="sticker-for-collection">
		<a href="/stickerbook#{{post.day}}"><img src="{{ post.nativity_figure }}" class="grow"></a>
	</div>
</div>
