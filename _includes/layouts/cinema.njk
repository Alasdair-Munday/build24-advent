---
layout: layouts/base.njk
templateClass: tmpl-cinema
---
<h1>{{ title }}</h1>

<div class="ratio ratio-16x9">
  <iframe src="https://www.youtube.com/embed/{{ cover }}" class="rounded" title="{{ title }}" allowfullscreen></iframe>
</div>
<time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
{%- for tag in tags | filterTagList -%}
{%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
<a href="{{ tagUrl | url }}" class="cinema-tag">{{ tag }}</a>
{%- endfor %}

{{ content | safe }}

{%- set nextCinema = collections.cinemas | getNextCollectionItem(page) %}
{%- set previousCinema = collections.cinemas | getPreviousCollectionItem(page) %}
{%- if nextCinema or previousCinema %}
<div class="text-center p-3">
  {%- if nextCinema %} <a class="btn btn-bgs text-white" href="{{ nextCinema.url | url }}">← {{ nextCinema.data.title }}</a>{% endif %}
  {%- if previousCinema %}&nbsp;<a class="btn btn-bgs text-white" href="{{ previousCinema.url | url }}">{{ previousCinema.data.title }} →</a>{% endif %}
</div>
{%- endif %}
