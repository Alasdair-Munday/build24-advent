{% include "layouts/widget/head.njk" %}
<style>body { background: none; }</style>

<div id="stickers" class="row">
  {% for sticker in post.reverse() %}
    <img id="sticker-{{sticker.day}}" class="sticker" src="{{sticker.nativity_figure}}" draggable="false">
  {% endfor %}
</div>

<div id="stable">
  <img src="/img/stickers/stable_front.png" class="stable-bg" draggable="false">
</div>

<script>
// self executing function here
$(document).ready(function() {
    initialiseStickerbook();
});
</script>

<audio class="sfx" id="take-sticker1" src="/sfx/take_sticker1.wav"></audio>
<audio class="sfx" id="take-sticker2" src="/sfx/take_sticker2.wav"></audio>
